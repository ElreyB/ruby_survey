<h3> <%= @survey.title %> </h3>

<% if @questions.any? %>
  <% @questions.each do |question| %>
  <form class="" action="index.html" method="post">
    <%= question.query %>
    <% if question.answers.any? %>
        <% question.answers.each do |answer| %>
          <div class="radio">
            <label>
              <input type="radio" name="color" value="<%= answer.id %>">
              <%= answer.solution %>
            </label>
          </div>
        <% end %>
      </form>
    <% end %>
  <% end %>
<% else %>
  <p>There are currently no questions for this survey.</p>
<% end %>

<footer>
  <a href="/"><button type="button" class="btn">Home</button></a>
</footer>
